@model BaseModel.Grupo

@{
    ViewBag.Title = "Ativar Grupo";
}

<h2>@ViewBag.Title</h2>

<h3>Você tem certeza que dezeja ativar esse Grupo?</h3>
<div>
    <h4>Grupo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Ativar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a Lista de Grupos", "IndexAtivarGrupo")
        </div>
    }
</div>
