@model BaseModel.ContaPagar

@{
    ViewBag.Title = "Ativar Conta a Pagar";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja ativar essa Conta a Pagar?</h3>
<div>
    <h4>Conta a Pagar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model._Fornecedor.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._Fornecedor.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model._Grupo.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._Grupo.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data_Vencimento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data_Vencimento)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Ativar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a lista de Contas a Pagar Baixadas", "IndexBaixado")
        </div>
    }
</div>
